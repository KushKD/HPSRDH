<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f2f2f2"
    android:orientation="vertical"
    android:weightSum="6">


    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:layout_weight="1" >

        <!-- Search By UID -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:id="@+id/button_search_by_uid"
                android:orientation="horizontal"
                android:padding="5dip" >
                <!-- ListRow Left side Thumbnail image -->
                <LinearLayout
                    android:id="@+id/thumbnail_search_by_uid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="5dip"
                    android:padding="3dip" >
                    <ImageView
                        android:id="@+id/list_image_search_by_uid"
                        android:contentDescription="@string/app_name"
                        android:layout_width="40dip"
                        android:layout_height="40dip"
                        android:src="@drawable/lock_login_screen" />
                </LinearLayout>
                <!-- Rightend Arrow -->

                <!-- City -->
                <EditText
                    android:id="@+id/edit_text_search_by_uid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/list_image_search_by_uid"
                    android:layout_marginLeft="75dip"
                    android:gravity="center"
                    android:background="#FFFFFF"
                    android:layout_centerVertical="true"
                    android:paddingBottom ="10dip"
                    android:textColor="#d52736"
                    android:text=""
                    android:hint="Search By UID"
                    android:textColorHint="#d52736"
                    android:textSize="20dip"
                    android:typeface="sans" />

            </RelativeLayout>
        </LinearLayout>



        <!-- OR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dip"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:paddingBottom ="10dip"
                android:textColor="#d52736"
                android:textStyle="bold"
                android:typeface="sans"
                android:text="OR"></TextView>

        </LinearLayout>

        <!-- Search By Phone Number -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:id="@+id/button_search_by_phone_number"
                android:orientation="horizontal"
                android:padding="5dip" >
                <!-- ListRow Left side Thumbnail image -->
                <LinearLayout
                    android:id="@+id/thumbnail_search_by_phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="5dip"
                    android:padding="3dip" >
                    <ImageView
                        android:id="@+id/list_image_search_by_phone_number"
                        android:contentDescription="@string/app_name"
                        android:layout_width="40dip"
                        android:layout_height="40dip"
                        android:src="@drawable/lock_login_screen" />
                </LinearLayout>
                <!-- Rightend Arrow -->

                <!-- City -->
                <EditText
                    android:id="@+id/edit_text_search_by_phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/list_image_search_by_phone_number"
                    android:layout_marginLeft="75dip"
                    android:gravity="center"
                    android:background="#FFFFFF"
                    android:layout_centerVertical="true"
                    android:paddingBottom ="10dip"
                    android:textColor="#d52736"
                    android:text=""
                    android:hint="Search By Phone Number"
                    android:textColorHint="#d52736"
                    android:textSize="20dip"
                    android:typeface="sans" />

            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:layout_weight="5" >

        <TextView android:layout_width="wrap_content"
            android:background="@mipmap/footer_aadhaar"
            android:layout_gravity="left|center_horizontal|center_vertical"
            android:layout_height="wrap_content"></TextView>

        <Button
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:text="Search"></Button>

    </LinearLayout>

</LinearLayout>